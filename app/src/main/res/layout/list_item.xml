<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder2"
    android:id="@+id/cdView"
    android:layout_margin="10dp"
    android:backgroundTint="#63FF00"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/title_image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/customborder2"
    android:src="@drawable/navbar2"/>

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="236dp"
        android:layout_height="80dp"
        android:textStyle="bold"
        android:text="@string/title1"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_image"
        android:layout_marginStart="16dp"
        android:textSize="18dp"
        android:layout_margin="2dp"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expendedlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/customborder2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_image">

        <TextView
            android:id="@+id/briefNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/content1"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:textSize="17dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>